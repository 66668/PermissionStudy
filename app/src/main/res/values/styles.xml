<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--如下是第三方 AndPermission布局调用-->


    <style name="Permission.Theme.Sample" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="Permission.Theme.Sample.Activity">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Permission.Theme.Sample.AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Permission.WrapContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Permission.WrapContent.WidthMatchParent">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Permission.MatchParent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Permission.AppBar" parent="Permission.WrapContent.WidthMatchParent">
        <item name="android:theme">@style/Permission.Theme.Sample.AppBar</item>
    </style>

    <style name="Permission.Theme.Sample.Popup" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Permission.Toolbar" parent="Permission.WrapContent.WidthMatchParent">
        <item name="popupTheme">@style/Permission.Theme.Sample.Popup</item>
    </style>

    <style name="Permission.Theme.Sample.Button" parent="Widget.AppCompat.Button" />

    <style name="Permission.Button" parent="Permission.WrapContent">
        <item name="android:theme">@style/Permission.Theme.Sample.Button</item>
        <item name="android:layout_margin">@dimen/dp_1</item>
    </style>

    <style name="Permission.Button.Weight">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Permission.Button.Weight.Horizontal">
        <item name="android:layout_weight">1</item>
    </style>

</resources>
